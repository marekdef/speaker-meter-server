<h1>Log in</h1>

<% if notice %>
    <p id='notice'><%= notice %></p>
<% end %>


<%= form_tag sessions_create_path do %>
    <p>
      <%= label_tag :name %><br />
      <%= text_field_tag :name, params[:name] %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p class="button"><%= submit_tag ('Log in')%></p>
<% end %>